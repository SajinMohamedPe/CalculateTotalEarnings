pipeline {
    agent {
        docker {
            image 'docker:latest' // Use a Docker image that has Docker installed
            args '-v /var/run/docker.sock:/var/run/docker.sock -v $WORKSPACE:/workspace -w /workspace' // Combine args
	    reuseNode true
        }
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Build and Test with Maven') {
            steps {
                script {
                    // Ensure we are in the right directory
                    dir('../Jenkins-app/dockerized-springboot-and-my_sql-calculate') {
                        echo 'Current Directory:'
                        sh 'pwd'
                        sh 'ls -alt'
                        sh 'docker-compose --version'  // Check if docker is available
                        sh 'mvn clean package'  // Build the Maven project
                    }
                }
            }
        }

        stage('Build and Test with Node') {
            agent {
                docker {
                    image 'node:18-alpine'
                }
            }
            steps {
                script {
                    dir('../Jenkins-app/dockerized-springboot-and-my_sql-calculate') {
                        echo 'Running Node.js commands'
                        sh 'pwd'
                        sh 'ls -alt'
                        sh 'npm --version'
                    }
                }
            }
        }
    }
}
