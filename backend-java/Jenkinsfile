pipeline {
    agent {
        docker {
            image 'maven:3.9.0'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    // Ensure the Docker command is run inside the correct context
                    sh 'docker --version'  // Now this should work
                    sh 'docker build -t my-spring-boot-app .'
                }
            }
        }
        // Additional stages...
    }
}
