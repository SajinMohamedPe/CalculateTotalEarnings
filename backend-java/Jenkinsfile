pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build and Test') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls -alt'
                    sh 'cd ./backend-java'
                    sh 'pwd'
                    sh 'ls -alt'
                    sh 'mvn clean package'
                }
            }
        }
    }
}
