pipeline {
    agent {
        docker {
            image 'maven:3.9.0'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build and Test') {
            steps {
                script {
                    sh 'pwd'
                    sh 'ls -alt'
                    dir('./backend-java') {
                        sh 'pwd' // Print the current directory to verify
                        sh 'ls -alt' // List files in ./backend-java to ensure it's the correct folder
                        sh 'mvn clean package' // Run Maven build in the ./backend-java directory
                    }
                }
            }
        }
    }
}
